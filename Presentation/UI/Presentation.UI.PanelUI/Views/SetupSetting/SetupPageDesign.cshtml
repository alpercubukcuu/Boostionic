@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Setup Page";
}
<div class="modal">
    <div class="progress-bar">
        <div class="step active" id="step1">Step 1</div>
        <div class="step" id="step2">Step 2</div>
        <div class="step" id="step3">Step 3</div>
    </div>

    <form id="multiStepForm">
        <!-- Step 1 -->
        <div class="form-step active">
            <h2>Step 1: Personal Information</h2>
            <label for="name">Name:</label>
            <input type="text" id="name" required>
            <label for="email">Email:</label>
            <input type="email" id="email" required>
            <button type="button" class="next">Next</button>
        </div>

        <!-- Step 2 -->
        <div class="form-step">
            <h2>Step 2: Address Details</h2>
            <label for="address">Address:</label>
            <input type="text" id="address" required>
            <label for="city">City:</label>
            <input type="text" id="city" required>
            <button type="button" class="prev">Previous</button>
            <button type="button" class="next">Next</button>
        </div>

        <!-- Step 3 -->
        <div class="form-step">
            <h2>Step 3: Confirmation</h2>
            <p>Please confirm your details and submit.</p>
            <button type="button" class="prev">Previous</button>
            <button type="submit">Submit</button>
        </div>
    </form>
</div>

