@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Register Page";
}

<div id="wrapper" class="theme-cyan">
    <div class="vertical-align-wrap">
        <div class="vertical-align-middle auth-main">
            <div class="auth-box">
                <div class="top">
                    <img src="~/boostionic/html/dist/assets/images/logo-white.svg" alt="Iconic">
                </div>
                <div class="card">
                    <div class="header">
                        <p class="lead">Create an account</p>
                    </div>
                    <div class="body">
                        <form class="form-auth-small" id="register-form">
                            <div class="form-group">
                                <label for="register-name" class="control-label sr-only">Name</label>
                                <input type="text" class="form-control" id="register-name" placeholder="Name e.g. John">
                            </div>
                            <div class="form-group">
                                <label for="register-surname" class="control-label sr-only">Surname</label>
                                <input type="text" class="form-control" id="register-surname" placeholder="Surname e.g. Doe">
                            </div>
                            <div class="form-group">
                                <label for="register-email" class="control-label sr-only">Work Email</label>
                                <input type="email" class="form-control" id="register-email" placeholder="Email e.g. example@site.com">
                            </div>
                            <div class="form-group">
                                <label for="signin-password" class="control-label sr-only">Choose Password</label>
                                <input type="password" class="form-control" id="register-password" placeholder="Password">
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg btn-block">Start Boost Your Company</button>
                            <div class="bottom">
                                <span class="helper-text">Already have an account? <a href="/User/LoginPage">Login</a></span>
                            </div>
                        </form>
                        <div class="separator-linethrough"><span>OR</span></div>
                        <button class="btn btn-signin-social"><i class="fa fa-facebook-official facebook-color"></i> Sign in with Facebook</button>
                        <button class="btn btn-signin-social"><i class="fa fa-twitter twitter-color"></i> Sign in with Twitter</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/register.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
}