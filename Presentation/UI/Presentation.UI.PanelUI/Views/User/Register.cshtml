@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Register Page";
}


<div id="wrapper" class="theme-cyan">
    <form id="register-form">
        <div class="vertical-align-wrap">
            <div class="vertical-align-middle auth-main">
                <div class="auth-box">
                    <div class="top">
                        <img src="~/boostionic/html/dist/assets/images/logo-white.svg" alt="Iconic">
                    </div>
                    <div class="card">
                        <div class="header">
                            <p class="lead">Sign Up</p>
                        </div>
                        <div class="body">
                            <form class="form-auth-small" action="index.html">
                                <div class="form-group">
                                    <label for="register-fullname" class="control-label sr-only">Full Name</label>
                                    <input type="text" class="form-control" id="register-fullname" placeholder="John Doe">
                                </div>
                                <div class="form-group">
                                    <label for="signin-email" class="control-label sr-only">Work Email</label>
                                    <input type="email" class="form-control" id="signin-email" placeholder="example@site.com">
                                </div>
                                <div class="form-group">
                                    <label for="signin-password" class="control-label sr-only">Choose Password</label>
                                    <input type="password" class="form-control" id="signin-password" placeholder="Minimum 8 Charecter">
                                </div>                               
                                <button type="submit" class="btn btn-primary btn-lg btn-block">Start Boost Your Company</button>
                                <div class="bottom">                                  
                                    <span>Already have account ? <a>Sign In</a></span>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    <script src="~/js/login.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
